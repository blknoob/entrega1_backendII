<h1>Current</h1>

<ul>
  <li><strong>Nombre:</strong> {{user.first_name}} {{user.last_name}}</li>
  <li><strong>Email:</strong> {{user.email}}</li>
  <li><strong>Edad:</strong> {{user.age}}</li>
  <li><strong>Rol:</strong> {{user.role}}</li>
</ul>

<button
  onclick="document.getElementById('editForm').style.display='block'"
>Editar usuario</button>

<form
  id="editForm"
  action="/api/sessions/{{user._id}}?_method=PUT"
  method="POST"
  style="display:none;"
>

  <input type="hidden" name="_method" value="PUT" />
  <label>Nombre:
    <input
      type="text"
      name="first_name"
      value="{{user.first_name}}"
    /></label><br />
  <label>Apellido:
    <input type="text" name="last_name" value="{{user.last_name}}" /></label><br
  />
  <label>Email:
    <input type="email" name="email" value="{{user.email}}" /></label><br />
  <label>Edad:
    <input type="number" name="age" value="{{user.age}}" /></label><br />
  <label>Rol: <input type="text" name="role" value="{{user.role}}" /></label><br
  />
  <button type="submit">Guardar cambios</button>
</form>

<form action="/api/sessions/{{user._id}}?_method=DELETE" method="POST">

  <input type="hidden" name="_method" value="DELETE" />
  <button
    type="submit"
    onclick="return confirm('¿Seguro que deseas eliminar tu usuario?')"
  >Eliminar usuario</button>
</form>

<form action="/logout" method="POST" style="margin-top:10px;">
  <button type="submit">Cerrar sesión</button>
</form>